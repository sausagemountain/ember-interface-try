<input type="file" accept=".xls,.xlsx,.xlsb,.xlsm" class="sneaky no-select" {{on 'change' @addItem}}/>
<button {{action this.clear}} type="button" class="sneaky default-width no-select br5p">Clear</button>
<br/>
<div {{on 'drop' (fn this.onDrop)}} {{on 'dragover' (fn this.onDragOver)}} class="flex-col hundred pad1px drag-target">
  {{#each this.elementsCollection as |elem index|}}
    <div class="mar1px one-third h15 graph-container hundred block">
      <RemovableListItem @class="float-right graph-close" @index={{index}} @list={{this.elementsCollection}}>
        <Graph @data={{elem.data}} @options={{elem.options}} @type={{elem.type}} @class={{'br10p'}}/>
      </RemovableListItem>
    </div>
  {{/each}}
</div>