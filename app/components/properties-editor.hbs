<h3 class="text-right">{{@title}}</h3>
<div class="flex-row">
  {{#each-in this.props as |key value|}}
    {{#if value.object}}
      <PropertiesEditor @properties={{value.val}} @title={{key}}/>
      <hr/>
    {{else}}
      <label class="normal">
        <span>
          {{key}}
        </span>
        {{#if value.options}}
          <select class="flexG1" {{on 'change' (fn this.update @properties key)}}>
            {{#each value.options as |val|}}
              <option>{{val}}</option>
            {{/each}}
          </select>
        {{else}}
          {{#if value.checkbox}}
            <Input @type={{value.type}} @checked={{value.val}} @focusOut={{fn this.update @properties key}}/>
          {{else}}
            {{#if value.data}}
                <span class="sneaky no-select br5p default-width flexG1">Load Data</span>
                <Input type="file" accept=".xls,.xlsx,.xlsb,.xlsm" class="collapsed" {{on 'change' (fn this.addData @properties key)}}/>
            {{else}}
              <Input @type={{value.type}} @value={{value.val}} class="flexG1" pattern={{value.regex}} @focusOut={{fn this.update @properties key}}/>
            {{/if}}
          {{/if}}
        {{/if}}
      </label>
    {{/if}}
  {{/each-in}}
</div>