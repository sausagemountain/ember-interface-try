{{#if @node}}
  <li>
    {{#if @items}}
        <span {{action 'toggleDisplay'}} class="no-select">{{if isDisplayed '↘' '➡'}}</span>
    {{/if}}
    <span class="pointer">
    {{#draggable-item data=this.path}}
      {{yield}}
    {{/draggable-item}}
    </span>
  </li>
{{/if}}
{{#if @items}}
  {{#if isDisplayed}}
    <li>
      <ul>
        {{#each @items as |subtree|}}
          {{#if subtree}}
            {{#if subtree.node}}
              {{#treeview-internal node=subtree.node items=subtree.items parent=this}}
                {{subtree.node}}
              {{/treeview-internal}}
            {{else}}
              {{#treeview-internal node=subtree parent=this}}
                {{subtree}}
              {{/treeview-internal}}
            {{/if}}
          {{/if}}
        {{/each}}
      </ul>
    </li>
  {{/if}}
{{/if}}