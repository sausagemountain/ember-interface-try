<ul class="tree-view">
  {{#if this.items.length}}
    {{#each this.items as |item index|}}
      <TreeviewInternal @node={{item}} @index={{index}} @parent={{this}} @action={{@action}} @onChangeContents={{@onChangeContents}}>
        {{#if item.node}}
          {{item.node}}
        {{else}}
          {{item}}
        {{/if}}
      </TreeviewInternal>
    {{/each}}
  {{/if}}
  {{#unless @noAddButton}}
    <li>
      <AddToListItem @list={{this.items}} @action={{@action}} @onChange={{@onChangeContents}}> Add Item</AddToListItem>
    </li>
  {{/unless}}
</ul>